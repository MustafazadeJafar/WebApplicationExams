@model IEnumerable<MediaTypeAVM>
@{
    ViewData["Title"] = "Media Types";
}
@section Script{
    <!-- Page level plugins -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}
@section Style{
    <!-- Custom styles for this page -->
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}

<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<a asp-action="Create">Create</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Toggle</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Image</th>
                        <th>Toggle</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @if (Model != null)
                    {
                        foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "" : "alert-danger")">
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><img width="50" src="~/@item.ImagePath"></td>
                                <td><a asp-action="Toggle" asp-route-id="@item.Id">Toggle</a></td>
                                <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>