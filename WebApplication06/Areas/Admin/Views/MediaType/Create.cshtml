@model MediaTypeCreateAVM
@{
    ViewData["Title"] = "Media Type Create";
}
@section Style{
    <link rel="stylesheet" href="~/style.css">
}

<div class="wrapper">
    <form method="post" enctype="multipart/form-data">
        <div class="input-box">
            <input asp-for="Name" placeholder="Enter media type name" required>
            <span asp-validation-for="Name"></span>
        </div>
        <div class="input-box">
            <input asp-for="ImageFile" accept="image/*" required>
            <span asp-validation-for="ImageFile"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="input-box button">
            <input type="Submit" value="Create">
        </div>
    </form>
</div>