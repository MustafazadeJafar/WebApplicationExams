@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
@section Style{
    <link rel="stylesheet" href="~/style.css">
}

<div class="wrapper">
    <h2>Registration</h2>
    <form method="post">
        <div class="input-box">
            <input asp-for="FullName" placeholder="Enter your name" required>
            <span asp-validation-for="FullName"></span>
        </div>
        <div class="input-box">
            <input asp-for="UserName" placeholder="Enter unique username" required>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="input-box">
            <input asp-for="Password" placeholder="Create password" required>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="input-box">
            <input asp-for="ConfirmPassword" placeholder="Confirm password" required>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
@*         <div class="policy">
            <input asp-for="RememberMe" type="checkbox">
            <span asp-validation-for="RememberMe"></span>
            <h3>Remember me</h3>
        </div> *@
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="input-box button">
            <input type="Submit" value="Register Now">
        </div>
        <div class="text">
            <h3>Already have an account? <a asp-action="Login">Login now</a></h3>
        </div>
    </form>
</div>