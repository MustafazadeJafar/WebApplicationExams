@model IEnumerable<SocialMediaAdminVM>
@section Style
{
    <!-- Custom styles for this page -->
    <link href="~/admin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
}
@section Script
{
    <!-- Page level plugins -->
    <script src="~/admin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/admin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/admin/js/demo/datatables-demo.js"></script>
}
@{
    ViewData["Title"] = "Media Links";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Tables</h1>
<a asp-action="Create">Create link</a><br>
<a asp-action="Index" asp-controller="Users">View User editor</a><br>
<a asp-action="Index" asp-controller="SocialMediaType">View Type editor</a>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Link</th>
                        <th>TypeName</th>
                        <th>Toggle</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Link</th>
                        <th>TypeName</th>
                        <th>Toggle</th>
                        <th>Edit</th>
                    </tr>
                </tfoot>
                <tbody>
                    @if(Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "alert-danger" : "")">
                                <td>@item.Id</td>
                                <td>@item.UserName</td>
                                <td>@item.Link</td>
                                <td>@item.TypeName</td>
                                <td><a asp-action="Delete" asp-route-id="@item.Id">Toggle</a></td>
                                <td><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>