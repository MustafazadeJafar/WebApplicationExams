@model SocialMediaTypeCreateVM
@{
    ViewData["Title"] = "Create media type";
}
@section Style
{
    <link rel="stylesheet" href="~/style.css">
}

<div class="wrapper">
    <form method="post" enctype="multipart/form-data">
        <div class="input-box">
            <input asp-for="TypeName" placeholder="Enter media name" required>
            <span asp-validation-for="TypeName"></span>
        </div>
        <div class="input-box">
            <input asp-for="ImageFile" accept="image/*" required>
            <span asp-validation-for="ImageFile"></span>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="input-box button">
            <input type="Submit" value="Create">
        </div>
    </form>
</div>