@model LoginVM
@{
    ViewData["Title"] = "Login";
}
@section Style
    {
    <link rel="stylesheet" href="~/style.css">
}
<br>
<div class="wrapper">
    <h2>Registration</h2>
    <form method="post">
        <div class="input-box">
            <input asp-for="UserName" placeholder="Enter unique username" required>
            <span asp-validation-for="UserName"></span>
        </div>
        <div class="input-box">
            <input asp-for="Password" placeholder="Create password" required>
            <span asp-validation-for="Password"></span>
        </div>
        @*         <div class="policy">
        <input type="checkbox">
        <h3>I accept all terms & condition</h3>
        </div> *@
        <div class="input-box button">
            <button type="Submit">Login</button>
        </div>
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="text">
            <h3>Already have an account? <a asp-action="Login">Login now</a></h3>
        </div>
    </form>
</div>